<UserControl x:Class="JadeControls.Workspace.WorkspaceCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JadeControls.Workspace"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary Source="WorkspaceCtrlResources.xaml" />
    </UserControl.Resources>    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />          
        </Grid.RowDefinitions>
        <local:WorkspaceTreeView x:Name="tv" BorderThickness="0" Margin="4" ItemsSource="{Binding Tree.TreeRoot}"  />        
    </Grid>
</UserControl>
