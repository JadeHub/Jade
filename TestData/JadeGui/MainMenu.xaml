        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="25"
      >

    <MenuItem Header="File">
        <MenuItem Header="Open Workspace..." Command="{Binding Path=OpenWorkspaceCommand}"  />
        <MenuItem Header="Save Workspace As..." Command="{Binding Path=SaveAsWorkspaceCommand}"  />
        <MenuItem Header="Close" />
        <MenuItem Header="E_xit" Command="{Binding Path=CloseCommand}" />
